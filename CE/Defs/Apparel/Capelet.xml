<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<ThingDef Name="TA_Capelet_Base" ParentName="ApparelMakeableBase" Abstract="True">
		<label>capelet</label>
		<description>.</description>
		<recipeMaker>
			<researchPrerequisite>ComplexClothing</researchPrerequisite>
		</recipeMaker>
		<techLevel>Medieval</techLevel>
		<costStuffCount>40</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>
		<equippedStatOffsets />
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToMake>4500</WorkToMake>
			<Mass>0.5</Mass>
			<StuffEffectMultiplierArmor>4</StuffEffectMultiplierArmor>
			<EquipDelay>1</EquipDelay>
			<StuffEffectMultiplierInsulation_Cold>0.45</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.3</StuffEffectMultiplierInsulation_Heat>
		</statBases>
		<thingCategories>
			<li>ApparelMisc</li>
		</thingCategories>
		<apparel>
			<developmentalStageFilter>Adult</developmentalStageFilter>
			<bodyPartGroups>
				<li>UpperHead</li>
				<li>Neck</li>
				<li>Shoulders</li>
			</bodyPartGroups>
			<layers>
				<li>OnHead</li>
			</layers>
			<tags>
				<li>Neolithic</li>
				<li>Medieval</li>
				<li>MedievalMilitary</li>
				<li MayRequire="Ludeon.RimWorld.Royalty">Royal</li>
			</tags>
			<defaultOutfitTags>
				<li>Worker</li>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
		<tradeTags>
			<li>Clothing</li>
		</tradeTags>
	</ThingDef>

	<ThingDef ParentName="TA_Capelet_Base">
		<defName>TA_CapeletUp</defName>
		<graphicData>
			<texPath>Apparel/TA_Capelet/TA_CapeletUp_ico</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
		</graphicData>
		<apparel>
			<renderSkipFlags Inherit="False">
				<li>None</li>
			</renderSkipFlags>
			<wornGraphicPath>Apparel/TA_Capelet/TA_CapeletUp</wornGraphicPath>
			<renderNodeProperties>
				<li Class="CapeFramework.PawnRenderNodeProperties_DualTexture">
					<nodeClass>CapeFramework.PawnRenderNode_Apparel_DualTexture</nodeClass>
					<workerClass>CapeFramework.PawnRenderNodeWorker_Apparel_DualTexture</workerClass>
					<backGraphicPath>Apparel/TA_Capelet/TA_CapeletUp</backGraphicPath>
					<visibleFacing>
						<li>South</li>
						<li>North</li>
						<li>East</li>
						<li>West</li>
					</visibleFacing>
					<baseLayer>68</baseLayer>
				</li>
			</renderNodeProperties>
		</apparel>
		<comps>
			<li Class="VanillaApparelExpanded.CompProperties_SwitchApparel" MayRequire="OskarPotocki.VanillaFactionsExpanded.Core">
				<SwitchTo>TA_CapeletDown</SwitchTo>
				<graphicPath>Apparel/TA_Capelet/TA_CapeletDown_ico</graphicPath>
				<Label>hood down</Label>
			</li>
		</comps>
	</ThingDef>
	
