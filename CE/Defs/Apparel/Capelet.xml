		<graphicData>
			<texPath>Apparel/TA_Capelet/TA_CapeletUp_ico</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<apparel>
			<wornGraphicPath>Apparel/TA_Capelet/TA_CapeletUp</wornGraphicPath>
		</apparel>
		<comps>
			<li Class="VanillaApparelExpanded.CompProperties_SwitchApparel" MayRequire="OskarPotocki.VanillaFactionsExpanded.Core">
				<SwitchTo>TA_CapeletDown</SwitchTo>
				<graphicPath>Apparel/TA_Capelet/TA_CapeletDown_ico</graphicPath>
