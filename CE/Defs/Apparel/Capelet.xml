			<developmentalStageFilter>Adult</developmentalStageFilter>
			<bodyPartGroups>
				<li>UpperHead</li>
				<li>Neck</li>
				<li>Shoulders</li>
			</bodyPartGroups>
			<layers>
				<li>OnHead</li>
			</layers>
			<tags>
				<li>Neolithic</li>
				<li>Medieval</li>
				<li>MedievalMilitary</li>
				<li MayRequire="Ludeon.RimWorld.Royalty">Royal</li>
			</tags>
			<defaultOutfitTags>
				<li>Worker</li>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
		<tradeTags>
			<li>Clothing</li>
		</tradeTags>
	</ThingDef>

	<ThingDef ParentName="TA_Capelet_Base">
