<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<!--Quiver-->
	<ThingDef ParentName="TA_ApparelCarryGearBase" MayRequire="CETeam.CombatExtended">
		<defName>TA_Quiver</defName>
		<label>quiver belt</label>
		<description>.</description>
		<graphicData>
			<texPath>Apparel/Accessories/TA_QuiverBelt/TA_QuiverBelt_ico</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<techLevel>Neolithic</techLevel>
		<recipeMaker>
			<researchPrerequisite>RecurveBow</researchPrerequisite>
			<skillRequirements>
				<Crafting>4</Crafting>
			</skillRequirements>
			<recipeUsers>
				<li>CraftingSpot</li>
				<li>HandTailoringBench</li>
				<li>ElectricTailoringBench</li>
			</recipeUsers>
		</recipeMaker>
		<statBases>
			<MaxHitPoints>120</MaxHitPoints>
			<WorkToMake>5000</WorkToMake>
			<Mass>1</Mass>
			<Bulk MayRequire="CETeam.CombatExtended">5</Bulk>
			<WornBulk MayRequire="CETeam.CombatExtended">0</WornBulk>
			<EquipDelay>3.5</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<CarryBulk MayRequire="CETeam.CombatExtended">15</CarryBulk>
		</equippedStatOffsets>
		<costStuffCount>30</costStuffCount>
		<stuffCategories>
			<li>Leathery</li>
		</stuffCategories>
		<apparel>
			<drawData>
				<defaultData>
					<layer>28</layer>
				</defaultData>
			</drawData>
			<careIfWornByCorpse>false</careIfWornByCorpse>
			<wornGraphicPath>Apparel/Accessories/TA_TurkQuiver/TA_TurkQuiver</wornGraphicPath>
			<useWornGraphicMask>true</useWornGraphicMask>
			<bodyPartGroups>
				<li>Torso</li>
			</bodyPartGroups>
			<layers>
				<li>Webbing</li>
			</layers>
			<tags>
				<li>Neolithic</li>
				<li>MedievalMilitary</li>
				<li>MedievalArmorDecent</li>
				<li MayRequire="Ludeon.RimWorld.Royalty">Royal</li>
				<li MayRequire="Ludeon.RimWorld.Royalty">RoyalTier2</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
	</ThingDef>

</Defs>