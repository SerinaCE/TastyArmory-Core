<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<!-- ==================== Hauberk ==================== -->
	<ThingDef ParentName="ArmorSmithableBase" MayRequireAnyOf="al9000.tastysteppe, al9000.fireandsteel, al9000.medievaleuropepartone">
		<defName>TA_MailleShirt</defName>
		<label>maille shirt</label>
		<description>long shirt of riveted maille, decent protection, very durable, lot of work to make.</description>
		<graphicData>
			<texPath>Apparel/Armor/TA_MailleShirt/TA_MailleShirt_ico</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<randomStyleChance>0.4</randomStyleChance>
		<randomStyle>
			<li MayRequire="al9000.medievaleuropepartone">
				<styleDef>TA_Style_MailleShirt_Bulky</styleDef>
			</li>
		</randomStyle>
		<recipeMaker>
			<researchPrerequisite>Smithing</researchPrerequisite>
			<unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
			<skillRequirements>
				<Crafting>2</Crafting>
			</skillRequirements>
		</recipeMaker>
		<techLevel>Medieval</techLevel>
		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
		<costStuffCount>80</costStuffCount>
		<equippedStatOffsets />
		<statBases>
			<MaxHitPoints>600</MaxHitPoints>
			<WorkToMake>30000</WorkToMake>
			<Bulk MayRequire="CETeam.CombatExtended">10</Bulk>
			<WornBulk MayRequire="CETeam.CombatExtended">3</WornBulk>
			<Mass>9</Mass>
			<StuffEffectMultiplierArmor>1.75</StuffEffectMultiplierArmor>
			<EquipDelay>6</EquipDelay>
		</statBases>
		<thingCategories>
			<li>ApparelArmor</li>
		</thingCategories>
		<apparel>
			<shellRenderedBehindHead>true</shellRenderedBehindHead>
			<developmentalStageFilter>Adult</developmentalStageFilter>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Shoulders</li>
				<li>Neck</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Apparel/Armor/TA_MailleShirt/TA_MailleShirt</wornGraphicPath>
			<useWornGraphicMask>true</useWornGraphicMask>
			<layers>
				<li>TA_UnderArmor</li>
			</layers>
			<tags>
				<li>MedievalMilitary</li>
				<li>MedievalArmorBasic</li>
				<li>MedievalArmorDecent</li>
				<li MayRequire="Ludeon.RimWorld.Royalty">Royal</li>
				<li MayRequire="Ludeon.RimWorld.Royalty">RoyalTier2</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<modExtensions>
			<li Class="CombatExtended.PartialArmorExt" MayRequire="CETeam.CombatExtended">
				<stats>
					<li>
						<ArmorRating_Blunt>0.55</ArmorRating_Blunt>
						<parts>
							<li>Torso</li>
							<li>Shoulder</li>
							<li>Arm</li>
							<li>Leg</li>
						</parts>
					</li>
				</stats>
			</li>
			<li Class="CombatExtended.PartialArmorExt" MayRequire="CETeam.CombatExtended">
				<stats>
					<li>
						<ArmorRating_Sharp>0.60</ArmorRating_Sharp>
						<parts>
							<li>Neck</li>
						</parts>
					</li>
				</stats>
			</li>
			<li Class="CombatExtended.PartialArmorExt" MayRequire="CETeam.CombatExtended">
				<stats>
					<li>
						<ArmorRating_Blunt>0.35</ArmorRating_Blunt>
						<parts>
							<li>Neck</li>
						</parts>
					</li>
				</stats>
			</li>
		</modExtensions>
		<tradeTags>
			<li>Armor</li>
		</tradeTags>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
